{
  "name": "finasys",
  "version": "1.0.0",
  "description": "A financial aid system built on ethereum blockchain.",
  "main": "index.js",
  "scripts": {
    "test": "mocha",
    "dev": "node server.js"
  },
  "repository": "https://github.com/GokulRaj-R/finasys.git",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@svgr/webpack": "^5.4.0",
    "fs-extra": "^9.0.1",
    "ganache-cli": "^6.10.1",
    "mocha": "^8.1.3",
    "next": "^9.5.3",
    "next-images": "^1.6.0",
    "next-routes": "^1.4.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "solc": "0.4.25",
    "sweetalert2": "^10.7.0",
    "truffle": "^5.1.49",
    "truffle-hdwallet-provider": "^1.0.17",
    "web3": "^1.2.11"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier",
      "react-app"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-underscore-dangle": 0
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "es5",
    "endOfLine": "lf"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
